@startuml Mouse Management
skinparam monochrome true

title Editor

partition mousedown {
	:_event: MouseEvent]
	:_event.preventDefault();
	if() then ([selectedAction])
		:selectedAction.mousedown(_event) ₼;
	endif
	:redrawAll ₼;
	stop 
}
break

partition mousemove {
	:_event: MouseEvent]
	:_event.preventDefault();
	if() then ([selectedAction])
		:selectedAction.mousemove(_event) ₼;
	endif
	:redrawAll ₼;
	stop 
}
break
partition mouseup {
	:_event: MouseEvent]
	:_event.preventDefault();
	if() then ([selectedAction])
		:selectedAction.mouseup(_event) ₼;
	endif
	:redrawAll ₼;
	stop 
}

@enduml